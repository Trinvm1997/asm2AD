@model IEnumerable<EndToEnd.Trainer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Training staff"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    using (Html.BeginForm())
    {
        <p>
            Find: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        <th>
            @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.TypeSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerType)
            </td>
            <td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrainerID })
                |
                @Html.ActionLink("Details", "Details", new { id = item.TrainerID })
                |
                @if (User.IsInRole("Training staff"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.TrainerID })
                }
            </td>
        </tr>
    }

</table>
